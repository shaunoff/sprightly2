{
  "name": "sprightly",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "version-bump": "lerna version --conventional-commits --yes",
    "publish-packages": "lerna publish --conventional-commits --yes",
    "generate": "graphql-codegen --config codegen.yml --watch",
    "changed": "lerna changed",
    "clean": "lerna run clean --stream",
    "lint": "lerna run lint --stream",
    "build": "lerna run build --stream",
    "build:gql": "lerna run build --scope=@sprightly/graphql-server --stream",
    "test": "lerna run test --stream",
    "start": "concurrently \"yarn generate\"  \"lerna run start --no-sort --stream\""
  },
  "author": "Shaun Hutch",
  "license": "ISC",
  "devDependencies": {
    "@apollo/client": "^3.3.8",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@graphql-codegen/cli": "^1.20.0",
    "@graphql-codegen/typescript-operations": "^1.17.14",
    "@graphql-codegen/typescript-react-apollo": "^2.2.1",
    "@graphql-codegen/typescript-resolvers": "^1.18.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "commitlint": "^11.0.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "graphql": "^15.5.0",
    "husky": "^4.3.8",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "parcel": "^2.0.0-beta.1",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "typescript": "^4.1.3"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
