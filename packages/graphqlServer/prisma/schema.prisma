// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  profile  Profile?
  events    Event[]
  refreshToken String?
}

model Profile {
  id String @id @default(uuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  firstName String
  lastName String
}


model Calendar {
  day_id       String @id
  year         Int
  month        Int
  day          Int
  quarter      Int
  day_of_week  Int
  day_of_year  Int
  week_of_year Int
}

model Event {
  eventId String   @id @default(uuid())
  user    User     @relation(fields: [userId], references: [id])
  userId  String
  journal Journal?
  workout Workout?
}

model Journal {
  id      String @id @default(uuid())
  eventId String
  event   Event  @relation(fields: [eventId], references: [eventId])
  text    String
}

model Workout {
  id      String @id @default(uuid())
  eventId String
  event   Event  @relation(fields: [eventId], references: [eventId])
  text    String
}
